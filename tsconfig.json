{
  "compilerOptions": {
    "strict": true,
    "module": "es2020",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "types": [
      "webpack-env",
      "jest"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
